<%- include("partials/header", { title: "Categories", active: "categories" }) %>

<h1 class="text-center">Categories</h1>

<a href="/categories/add" class="btn btn-success mb-3">Add Category</a>

<% if (categories.length > 0) { %>
    <table class="table table-bordered table-striped bg-light text-dark">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category</th>
                <th></th> <!-- For the "Remove" button -->
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(cat => { %>
                <tr>
                    <td><%= cat.id %></td>
                    <td><%= cat.category %></td>
                    <td>
                        <a href="/categories/delete/<%= cat.id %>" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p class="text-center">No categories available.</p>
<% } %>

<%- include("partials/footer") %>
